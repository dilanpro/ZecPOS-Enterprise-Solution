<div id="alert"></div>
{% if Message %}
	<script>
		Toastify({
			text: "{{ Message }}",
			duration: 5000,
			gravity: "top",
			position: "center",
		}).showToast();
	</script>
{% endif %}
{% if Error %}
	<script>
		Toastify({
			text: "{{ Error }}",
			duration: 5000,
			gravity: "top",
			position: "center",
			backgroundColor: "#fca5a5"
		}).showToast();
	</script>
{% endif %}